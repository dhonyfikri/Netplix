<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Netplix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/light_gray</item>
        <item name="android:textColorSecondary">@color/tertiary</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:fillColor">@color/secondary_color</item>
        <item name="android:color">@color/gray_900</item>
    </style>

    <style name="rippleable">
        <item name="android:foreground">@drawable/fg_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="rippleable_circular">
        <item name="android:foreground">@drawable/rc_circular_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>